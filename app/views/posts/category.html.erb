<% title "Recipes for #{@category.titleize}" %>

<div class="category">
  <h1>Recipes for <%= @category.titleize %></h1>
  <%= link_to "Back to Recipe Index", "/archive", :class => "back", :title => "Recipe Index" %>

  <ul class="block-grid three-up">
    <% @posts.each do |post| %>
      <li>
        <%= link_to (image_tag post.image.thumb, :alt => post.title), post, :title => post.title %>
        <%= link_to post.title, post, :title => post.title %>
      </li>
    <% end %>
  </ul> 
</div>

