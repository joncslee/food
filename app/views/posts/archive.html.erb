<% title 'Recipe Archive' %>

<h1>Recipe Archive</h1>

<div class="archive">
  <% @menu_categories.each do |category| %>
    <h2><%= link_to category.name.titleize, "archive/#{category.name}", :title => "Recipes for #{category.name.titleize}" %></h2>
    <% posts = Post.where(:is_active => '1').tagged_with(category.name) %>
    <ul>
      <% posts.each do |post| %>
        <li><%= link_to post.title, post %></li>
      <% end %>
    </ul>
  <% end %>
</div>

