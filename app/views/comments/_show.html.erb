<div class="comment">
  <div class="headline">
    <% if comment.website.present? %>
      <div class="name"><%= link_to comment.name, comment.website, :rel => "nofollow" %></div>
    <% else %>
      <div class="name"><%= comment.name %></div>
    <% end %>
    <div class="date"><%= comment.created_at.strftime('%b %e, %Y') %></div>
  </div>
  <div class="content">
    <%= comment.content %>
  </div>

  <% if admin_user_signed_in? %>
    <%= link_to 'Delete', [@post, comment], :method => :delete, :confirm => "Are you sure?", :class => "comment-delete" %>
  <% end %>
  
</div>
